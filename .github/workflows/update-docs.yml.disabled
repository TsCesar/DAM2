name: Actualiza índice y tabla de prácticas

on:
  push:
    branches: [ main ]
    paths:
      - '01-*/**'
      - '02-*/**'
      - '03-*/**'
      - '04-*/**'
      - '05-*/**'
      - '06-*/**'
      - 'scripts/**'
      - 'README.md'
      - 'docs/**'
  workflow_dispatch: {}

permissions:
  contents: write

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Ejecuta generadores (tolerante a errores)
        shell: bash
        run: |
          set -e
          chmod +x scripts/*.sh || true
          ./scripts/actualiza_indice.sh || true
          ./scripts/actualiza_listas_modulos.sh || true
          ./scripts/actualiza_tabla_practicas.sh || true

      - name: Commit y push si hay cambios
        shell: bash
        run: |
          git config user.name  "github-actions[bot]"
          git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
          # Evita fallar si no hay 0X-.../README.md que añadir
          git add README.md docs/INDICE.md 0*/README.md || true

          # Si no hay nada staged, salimos sin error
          if git diff --cached --quiet; then
            echo "No hay cambios que subir."
            exit 0
          fi

          git commit -m "docs: auto-actualiza índice, listas y tabla [skip ci]"
          git push
